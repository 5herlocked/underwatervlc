# Custom button
<CustButton@Button>:
    size: 10,70

# Define id so I can refer to the CalcGridLayout
# class functions
# Display points to the entry widget
<Trans_Receiver>:
    id: calculator
    display: entry
    rows: 20
    padding: 20
    spacing: 20

    # Where input is displayed
    BoxLayout:
        TextInput:
            id: entry
            font_size: 25
            multiline: False
        TextInput:
            id: sectry
            font_size: 25
            multiline: False

    BoxLayout:
        spacing: 20
        Label:
            id: label_widget
            text: 'Transmitter1'
            color: 1,0,1,1
        CustButton:
            text: "START"
            on_press: calculator.start_transmitter("1")
        CustButton:
            background_color: (1.0, 1.0, 0.0, 1.0)
            text: "STOP"
            on_press: calculator.stop_transmitter("1")

        Label:
            id: label_widget
            text: 'Receiver1'
            color: 1,0,1,1
        CustButton:
            background_color: (1.0, 0.0, 0.0, 1.0)
            text: "START"
            on_press: calculator.stop_receiver("1")
        CustButton:
            text: "START"
            on_press: calculator.stop_receiver("1")

    BoxLayout:
        spacing: 20
        Label:
            id: label_widget
            text: 'Transmitter2'
            color: 1,0,1,1
        CustButton:
            text: "START"
            on_press: calculator.start_transmitter("2")
        CustButton:
            background_color: (1.0, 1.0, 0.0, 1.0)
            text: "STOP"
            on_press: calculator.stop_transmitter("2")
        Label:
            id: label_widget
            text: 'Receiver2'
            color: 1,0,1,1
        CustButton:
            background_color: (1.0, 0.0, 0.0, 1.0)
            text: "START"
            on_press: calculator.start_receiver("2")
        CustButton:
            text: "STOP"
            on_press:  calculator.stop_receiver("2")

    BoxLayout:
        spacing: 60
        CustButton:
            text: "Terminate"
            on_press: calculator.terminate()
